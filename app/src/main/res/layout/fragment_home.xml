<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView"
        android:visibility="visible"
        android:layout_above="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title1"
                android:text="Batman movies"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvList1"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
            <TextView
                android:id="@+id/title2"
                android:text="Superman Movies"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvList2"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
            <TextView
                android:id="@+id/title3"
                android:text="King movies"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvList3"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
            <TextView
                android:id="@+id/title4"
                android:text="Aquaman"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvList4"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
            <TextView
                android:id="@+id/title5"
                android:textColor="@android:color/white"
                android:text="Deadpool Movies"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvList5"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>