<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ss.bottomnavigation.BottomNavigation

        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/darkgrey">

        <com.ss.bottomnavigation.TabItem

            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tab_icon="@drawable/ic_home"
            app:tab_text="Home" />

        <com.ss.bottomnavigation.TabItem

            android:id="@+id/tab_downlaod"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tab_icon="@drawable/ic_vertical_align_bottom_black_24dp"
            app:tab_text="Download" />

        <com.ss.bottomnavigation.TabItem

            android:id="@+id/tab_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tab_icon="@drawable/ic_account"
            app:tab_text="My Account" />

    </com.ss.bottomnavigation.BottomNavigation>

    <ScrollView

