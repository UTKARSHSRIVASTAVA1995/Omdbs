<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omdbs">


    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_imdb_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_imdb_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".dashboard.DashboardActivity" />

        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".UsersListActivity" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MovieDetailsFragment"
            android:label="Movie Details"
            android:theme="@style/AppThemeWithTitle" />

    </application>


</manifest>